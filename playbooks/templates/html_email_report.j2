<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>System Configuration Report</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .success { color: green; }
        .no-change { color: orange; }
        .failure { color: red; }
    </style>
</head>
<body>
    <h1>System Configuration Report for {{ new_hostname }}</h1>
    <p>Date of Report: {{ ansible_date_time.iso8601 }}</p>
    <table>
        <tr>
            <th>Task</th>
            <th>Sub Task</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
        <!-- Hostname Change -->
        <tr>
            <td>Hostname Change</td>
            <td>N/A</td>
            <td class="{{ 'success' if hostname_change_output.rc|default(0) == 0 else 'failure' }}">
                {{ 'Complete' if hostname_change_output.rc|default(0) == 0 else 'Failed' }}
            </td>
            <td>Hostname updated successfully.</td>
        </tr>
        <!-- Sudoers Update -->
        <tr>
            <td rowspan="{{ (sudo_groups_result.results | length) + (sudo_users_result.results | length) }}">Sudoers Update</td>
            <td>Groups</td>
            <td class="{{ 'success' if (sudo_groups_result.results | map(attribute='changed') | select('equalto', true) | list | count > 0) else 'no-change' }}">
                {{ 'Changes Applied' if (sudo_groups_result.results | map(attribute='changed') | select('equalto', true) | list | count > 0) else 'No Changes Needed' }}
            </td>
            <td>
                {% for result in sudo_groups_result.results %}
                {{ result.item }}<br>
                {% endfor %}
            </td>
        </tr>
        <!-- Detail rows for each group -->
        {% for result in sudo_groups_result.results %}
        <tr>
            <td>{{ result.item }} (Group)</td>
            <td class="{{ 'success' if result.changed else 'no-change' }}">
                {{ 'Changed' if result.changed else 'No Changes Needed' }}
            </td>
            <td>{{ result.msg if result.changed else 'Group already present or no changes required.' }}</td>
        </tr>
        {% endfor %}
        <!-- Access Configuration Update -->
        <tr>
            <td rowspan="{{ (access_groups_result.results | length) + (access_users_result.results | length) }}">Access Configuration Update</td>
            <td>Users</td>
            <td class="{{ 'success' if (access_users_result.results | map(attribute='changed') | select('equalto', true) | list | count > 0) else 'no-change' }}">
                {{ 'Changes Applied' if (access_users_result.results | map(attribute='changed') | select('equalto', true) | list | count > 0) else 'No Changes Needed' }}
            </td>
            <td>
                {% for result in access_users_result.results %}
                {{ result.item }} (User)<br>
                {% endfor %}
            </td>
        </tr>
        <!-- Other tasks continue similarly -->
    </table>
</body>
</html>
